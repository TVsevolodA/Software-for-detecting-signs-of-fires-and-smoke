<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>infoReport</title>
    <!-- BootStrap -->
    <link href=" https://use.fontawesome.com/releases/v6.5.1/css/all.css" rel="stylesheet" >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
      .HiddenFields { display: none; }
      main {
        display: flex;
        justify-content: center;
      }
      .accordion {
        width: 65%;
        margin: 5%;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="http://localhost:5050">Главная</a></li>
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Управление БД</a></li>
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="#" id="mainReport">Отчетность</a></li>
            <li class="nav-item"><a class="nav-link active" aria-current="page" href="http://localhost:5050/managingRoles">Роли</a></li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="http://localhost:5050/profile">
                <i class="bi bi-person-circle h1"></i>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <main>
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    Информация об инциденте
                </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <div class="card mb-3">
                            <div class="row g-0">
                                <div class="col-md-4">
                                <figure class="figure">
                                    <img class="figure-img img-fluid rounded" id="captured_image">
                                    <figcaption class="figure-caption">Снимок инцидента.</figcaption>
                                </figure>
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="datetime">Время</label>
                                            <input type="text" readonly class="form-control" id="datetime">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="type_event">Признаки</label>
                                            <textarea readonly class="form-control" id="type_event" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    Информация о камере
                </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="mb-3">
                            <label class="form-label" for="name_camera">Камера</label>
                            <input type="text" readonly class="form-control" id="name_camera">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="address">Адрес</label>
                            <input type="text" readonly class="form-control" id="address">
                        </div>
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                    Информация о дежурном
                </button>
                </h2>
                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <div class="mb-3">
                        <label class="form-label" for="username">Дежурный</label>
                        <input type="text" readonly class="form-control" id="username">
                    </div>
                </div>
                </div>
            </div>


            <div class="accordion-item">
                <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="true" aria-controls="panelsStayOpen-collapseFour">
                    Информация о последствиях
                </button>
                </h2>
                <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="m-3">
                            <label class="form-label" for="description">Описание</label>
                            <textarea readonly class="form-control" name="description" id="description" rows="5"></textarea>
                        </div>
                        <div class="m-3">
                            <label class="form-label" for="measures_taken">Принятые меры</label>
                            <textarea readonly class="form-control" name="measures_taken" id="measures_taken" rows="5"></textarea>
                        </div>
                        <div class="m-3">
                            <label class="form-label" for="consequences">Последствия</label>
                            <textarea readonly class="form-control" name="consequences" id="consequences" rows="5"></textarea>
                        </div>
                        <div class="m-3">
                            <label class="form-label" for="conclusion">Заключение</label>
                            <textarea readonly class="form-control" name="conclusion" id="conclusion" rows="5"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- BootStrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
      //@ts-check
      const report = {{{report}}};
      const currentUser = {{{user}}};

      document.getElementById('mainReport').href = `/getReports/${currentUser.id}/${currentUser.name}`;

      document.getElementById('datetime').value = report.datetime;
      document.getElementById('username').value = report.duty;
      document.getElementById('description').value = report.description;
      document.getElementById('measures_taken').value = report.measures_taken;
      document.getElementById('consequences').value = report.consequences;
      document.getElementById('conclusion').value = report.conclusion;

      document.getElementById('type_event').value = report.type_event;
      let captured_image = document.getElementById('captured_image');
      captured_image.src = `data:image/png; base64, ${report.captured_image}`;
      captured_image.alt = "Не удалось получить изображение.";

      document.getElementById('name_camera').value = report.name_camera;
      document.getElementById('address').value = report.address;
    </script>
  </body>
</html>